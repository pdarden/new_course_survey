
<h2><%= @survey_questions["survey_title"] %></h2>

<ul>

  <%= form_for @page do |f| %>
  <% answered_questions_array = [] %>
  <% answered_answers_array = [] %>
  <% @question_array.each_with_index do |question, index| %>
  <li>
    <%= f.label "question", question %>
    <% answered_questions_array << question %>

    <% @option_array[index][0].each do |optionNumber, option| %>
    <%= radio_button_tag index, option %>
    <%= label_tag option, option %>
    <%end%>
    <%end%>

  </li>
  <%= f.hidden_field :question, :value => answered_questions_array %>
  <%= f.submit "submit" %>
  <%end%>
</ul>


